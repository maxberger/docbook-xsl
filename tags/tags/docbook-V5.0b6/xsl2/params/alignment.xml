<refentry xmlns="http://docbook.org/ns/docbook"
	  xmlns:src="http://nwalsh.com/xmlns/litprog/fragment"
	  xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
	  xmlns:xlink="http://www.w3.org/1999/xlink"
	  version="5.0"
	  xml:id="alignment">
<refmeta>
<refentrytitle>alignment</refentrytitle>
<refmiscinfo role="type">string</refmiscinfo>
</refmeta>
<refnamediv>
<refname>alignment</refname>
<refpurpose>Specify the default text alignment</refpurpose>
</refnamediv>

<refsynopsisdiv>
<src:fragment xml:id="alignment.frag">
<xsl:param name="alignment" select="'justify'"/>
</src:fragment>
</refsynopsisdiv>

<refsect1><title>Description</title>

<para>The default text alignment is used for most body text.
</para>

</refsect1>
</refentry>
