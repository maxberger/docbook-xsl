<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE t:titlepages [
<!ENTITY hsize0 "10pt">
<!ENTITY hsize1 "12pt">
<!ENTITY hsize2 "14.4pt">
<!ENTITY hsize3 "17.28pt">
<!ENTITY hsize4 "20.736pt">
<!ENTITY hsize5 "24.8832pt">
<!ENTITY hsize0space "7.5pt"> <!-- 0.75 * hsize0 -->
<!ENTITY hsize1space "9pt"> <!-- 0.75 * hsize1 -->
<!ENTITY hsize2space "10.8pt"> <!-- 0.75 * hsize2 -->
<!ENTITY hsize3space "12.96pt"> <!-- 0.75 * hsize3 -->
<!ENTITY hsize4space "15.552pt"> <!-- 0.75 * hsize4 -->
<!ENTITY hsize5space "18.6624pt"> <!-- 0.75 * hsize5 -->
]>
<t:titlepages xmlns:t="http://docbook.org/xslt/ns/template"
	      xmlns:fo="http://www.w3.org/1999/XSL/Format"
	      xmlns:db="http://docbook.org/ns/docbook">

<db:article t:side="recto">
  <fo:block font-family="{$title.font.family} sans-serif"
	    start-indent="0pt"
	    text-align="center">

    <fo:block font-size="&hsize5;" font-weight="bold">
      <db:title/>
    </fo:block>

    <db:subtitle/>

    <fo:block t:conditional="1"
	      space-before="0.5em" font-size="&hsize2;">
      <db:corpauthor/>
    </fo:block>

    <fo:block t:conditional="1"
	      space-before="0.5em" font-size="&hsize2;">
      <db:authorgroup/>
    </fo:block>

    <fo:block t:conditional="1"
	      space-before="0.5em" font-size="&hsize2;">
      <db:author/>
    </fo:block>

    <fo:block t:conditional="1" space-before="0.5em">
      <db:othercredit/>
    </fo:block>

    <fo:block t:conditional="1" space-before="0.5em">
      <db:releaseinfo/>
    </fo:block>

    <fo:block t:conditional="1" space-before="0.5em">
      <db:copyright/>
    </fo:block>

    <fo:block t:conditional="1"
	      font-family="{$body.font.family}"
	      text-align="start"
	      space-before="0.5em"
	      margin-left="0.5in"
	      margin-right="0.5in">
      <db:legalnotice/>
    </fo:block>

    <fo:block t:conditional="1" space-before="0.5em">
      <db:pubdate/>
    </fo:block>

    <fo:block t:conditional="1" space-before="0.5em">
      <db:revision/>
    </fo:block>

    <fo:block t:conditional="1" space-before="0.5em">
      <db:revhistory/>
    </fo:block>

    <fo:block t:conditional="1"
              font-family="{$body.fontset}"
	      text-align="start"
	      space-before="0.5em"
	      margin-left="0.5in"
              margin-right="0.5in">
      <db:abstract/>
    </fo:block>
  </fo:block>
</db:article>

<db:chapter t:side="recto">
  <fo:block font-family="{$title.font.family} sans-serif"
	    start-indent="0pt"
	    text-align="center">

    <fo:block font-size="&hsize5;" font-weight="bold">
      <db:title/>
    </fo:block>

    <db:subtitle/>

    <fo:block t:conditional="1"
	      space-before="0.5em" font-size="&hsize2;">
      <db:corpauthor/>
    </fo:block>

    <fo:block t:conditional="1"
	      space-before="0.5em" font-size="&hsize2;">
      <db:authorgroup/>
    </fo:block>

    <fo:block t:conditional="1"
	      space-before="0.5em" font-size="&hsize2;">
      <db:author/>
    </fo:block>

    <fo:block t:conditional="1" space-before="0.5em">
      <db:othercredit/>
    </fo:block>

    <fo:block t:conditional="1" space-before="0.5em">
      <db:releaseinfo/>
    </fo:block>

    <fo:block t:conditional="1" space-before="0.5em">
      <db:copyright/>
    </fo:block>

    <fo:block t:conditional="1"
	      font-family="{$body.font.family}"
	      text-align="start"
	      space-before="0.5em"
	      margin-left="0.5in"
	      margin-right="0.5in">
      <db:legalnotice/>
    </fo:block>

    <fo:block t:conditional="1" space-before="0.5em">
      <db:pubdate/>
    </fo:block>

    <fo:block t:conditional="1" space-before="0.5em">
      <db:revision/>
    </fo:block>

    <fo:block t:conditional="1" space-before="0.5em">
      <db:revhistory/>
    </fo:block>

    <fo:block t:conditional="1"
              font-family="{$body.fontset}"
	      text-align="start"
	      space-before="0.5em"
	      margin-left="0.5in"
              margin-right="0.5in">
      <db:abstract/>
    </fo:block>
  </fo:block>
</db:chapter>

</t:titlepages>

