   refnamediv.attr =
      refnamediv.role.attribute?
    & common.attributes
    & common.linking.attributes

   db.refnamediv =
      element refnamediv {
         refnamediv.attr,
         db.refdescriptor?,
         db.refname+,
         db.refpurpose,
         db.refclass*
      }
}

# ======================================================================

[
   db:refname [ "refdescriptor" ]
   db:refpurpose [ "" ]
