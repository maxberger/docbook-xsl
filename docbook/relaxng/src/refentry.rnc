div {

   refdescriptor.role.attribute = attribute role { text }

   refdescriptor.attr =
      refdescriptor.role.attribute?
    & common.attributes
    & common.linking.attributes

   db.refdescriptor =
      element refdescriptor {
         refdescriptor.attr,
         inlines*
      }
}

