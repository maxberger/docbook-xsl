   db.titleabbrev.role.attribute = attribute role { text }

   db.titleabbrev.attlist =
      db.titleabbrev.role.attribute?
    & db.common.attributes
    & db.common.linking.attributes

   db.titleabbrev =
      element titleabbrev {
         db.titleabbrev.attlist,
         db.all.inlines*
      }
}

