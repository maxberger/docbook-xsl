namespace rng  = "http://relaxng.org/ns/structure/1.0"
namespace s = "http://www.ascc.net/xml/schematron"
namespace db = "http://docbook.org/docbook-ng"
default namespace = "http://docbook.org/docbook-ng"

db.technical.blocks |= db.task

db.task.info = db._info.title.only

# ======================================================================

[
   db:refname [ "task" ]
   db:refpurpose [ "" ]
]
div {

   db.task.role.attribute = attribute role { text }

   db.task.attlist =
      db.task.role.attribute?
    & db.common.attributes
    & db.common.linking.attributes

   db.task =
      element task {
         db.task.attlist,
         db.task.info,
         db.tasksummary?,
         db.taskprerequisites?,
         db.procedure,
         db.example*,
         db.taskrelated?
      }
}

# ======================================================================

[
   db:refname [ "tasksummary" ]
   db:refpurpose [ "" ]
]
div {

   db.tasksummary.role.attribute = attribute role { text }

   db.tasksummary.attlist =
      db.tasksummary.role.attribute?
    & db.common.attributes
    & db.common.linking.attributes

   db.tasksummary.info = db._info.title.only

   db.tasksummary =
      element tasksummary {
         db.tasksummary.attlist,
         db.tasksummary.info,
         db.all.blocks+
      }
}

